<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color5"
    tools:context=".SaveActivity">

    <TextView
        android:id="@+id/judul_pemasukan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="86dp"
        android:text="Pemasukan"
        android:textColor="@color/color4"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/text_pilih_pemasukan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/judul_pemasukan"
        android:layout_marginTop="64dp"
        android:gravity="center"
        android:text="Pilih jenis tabungan"
        android:textColor="@color/color4"
        android:textSize="18sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cash_button_pemasukan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_pilih_pemasukan"
        android:layout_marginTop="32dp"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:background="@drawable/button_rounded1"
        android:text="Cash"
        android:textColor="@color/black"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bank_button_pemasukan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_pilih_pemasukan"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/button_rounded1"
        android:text="Bank"
        android:textColor="@color/black"/>

</RelativeLayout>