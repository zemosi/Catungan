<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_pengeluaran"
    tools:context=".SpendBank">

    <TextView
        android:id="@+id/judul_pengeluaran"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="86dp"
        android:text="Pengeluaran"
        android:textColor="@color/color4"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/text_bank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/judul_pengeluaran"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="Bank"
        android:textColor="@color/color4"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/text_nama_bank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_bank"
        android:layout_marginTop="136dp"
        android:paddingLeft="24sp"
        android:text="Nama Bank"
        android:textColor="@color/color4"
        android:textSize="24sp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/text_nama_bank"
        android:layout_margin="24dp"
        android:background="@drawable/button_rounded1"/>

    <EditText
        android:id="@+id/spend_nama_bank"
        android:layout_width="340dp"
        android:layout_height="48dp"
        android:layout_below="@id/text_nama_bank"
        android:layout_margin="24dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_rounded1"
        android:inputType="textCapSentences"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/text_nominal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/spend_nama_bank"
        android:layout_marginTop="16dp"
        android:paddingLeft="24sp"
        android:text="Nominal"
        android:textColor="@color/color4"
        android:textSize="24sp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/text_nominal"
        android:layout_margin="24dp"
        android:background="@drawable/button_rounded1"/>

    <EditText
        android:id="@+id/spend_nominal_bank"
        android:layout_width="340dp"
        android:layout_height="48dp"
        android:layout_below="@id/text_nominal"
        android:layout_margin="24dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_rounded1"
        android:inputType="number"
        android:textColor="@color/black"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/submit_spend_bank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spend_nominal_bank"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:padding="14dp"
        android:background="@drawable/button_rounded1"
        android:text="Tambah"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:onClick="spendBank"/>

</RelativeLayout>